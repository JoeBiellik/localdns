extends layout

block nav
  li.nav-item
    a(href='/').nav-link Home
  li.nav-item
    a(href='/register').nav-link Register
  li.nav-item
    a(href='/about').nav-link About

block content
  section.jumbotron.p-a-3
    form(method='post', action='/login').text-md-left
      if errors && errors._top
        div.alert.alert-danger #{errors._top}
      if errors && errors.email
        div.form-group.has-danger
          input(type='email', placeholder='Email Address', name='email', required, autofocus)#inputEmail.form-control.form-control-lg.form-control-danger
          div.alert.alert-danger #{errors.email}
      else
        div.form-group
          input(type='email', placeholder='Email Address', name='email', required, autofocus)#inputEmail.form-control.form-control-lg
          
      if errors && errors.password
        div.form-group.has-danger
          input(type='password', placeholder='Password', name='password', required)#inputPassword.form-control.form-control-lg.form-control-danger
          div.alert.alert-danger #{errors.password}
      else
        div.form-group
          input(type='password', placeholder='Password', name='password', required)#inputPassword.form-control.form-control-lg
        
      button(type='submit').btn.btn-lg.btn-primary.btn-block Login
