doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400,300')
    style.
      html {
        position: relative;
        min-height: 100%;
      }
      body {
        font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
        margin-bottom: 50px;
      }
      @media (min-width: 48em) {
        .container {
          max-width: 46rem;
        }
      }
      header {
        border-bottom: 1px solid #e5e5e5;
      }
      .jumbotron {
        text-align: center;
      }
      .details {
        margin: 3rem 0;
      }
      .details p + h4 {
        margin-top: 1.5rem;
      }
      footer {
        width: 100%;
        height: 50px;
        position: absolute;
        bottom: 0;
        line-height: 20px;
      }

    block head

  body
    block content

    footer
      section.container.text-muted
        div.row
          div.col-lg-6
            p localdns.in
          div.col-lg-6
            p.text-md-right Your IP is #{ip}
