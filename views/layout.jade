doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400,300')
    style.
      html {
        position: relative;
        min-height: 100%;
      }
      body {
        font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
        margin-bottom: 50px;
      }
      @media (min-width: 48em) {
        .container {
          max-width: 46rem;
        }
      }
      header {
        border-bottom: 1px solid #e5e5e5;
      }
      .jumbotron {
        text-align: center;
      }
      .details {
        margin: 3rem 0;
      }
      .details p + h4 {
        margin-top: 2.5rem;
      }
      .input-group-addon {
        background-color: #f3f3f3;
      }
      footer {
        width: 100%;
        height: 50px;
        position: absolute;
        bottom: 0;
        line-height: 20px;
      }
    block head

  body
    a(href='https://github.com/JoeBiellik/dynamicdns')
      img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png', alt='Fork me on GitHub')

    block content

    footer
      section.container.text-muted
        div.row
          div.col-lg-6
            p #{domain}
          div.col-lg-6
            p.text-md-right Your IP is #{ip}

    script(src='https://code.jquery.com/jquery-2.2.2.min.js')
    script(src='/main.js')
