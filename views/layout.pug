doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{domain} - #{title}
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css', integrity='sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ', crossorigin='anonymous')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400,300')
    link(rel='stylesheet', href='/style.css')

    block head

  body
    a(href='https://github.com/JoeBiellik/localdns', target='_blank', style='position: absolute; top: 0; right: 0; border: 0;').hidden-md-down
      img(src='https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png', alt='Fork me on GitHub')

    main.container.mt-4.mx-6
      header.mb-4
        nav
          ul.nav.nav-pills.float-right
            block nav

        h1.text-muted.mb-4 #{domain}

      block content

    footer
      section.container.text-muted
        div.row
          div.col-sm-6
            p #{domain}
          div.col-sm-6
            p.text-sm-right Your IP is #{ip}
