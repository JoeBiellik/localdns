extends layout

block nav
  li.nav-item
    a.nav-link(href='/') Home
  li.nav-item
    a.nav-link(href='/login') Login
  li.nav-item
    a.nav-link(href='/about') About

include ./mixins/register-textbox

block content
  section.jumbotron.p-5
    form.text-md-left(method='post', action='/register')
      +register-textbox('text', 'sub', 'Subdomain', (body && body.sub), '2 to 63 characters; lowercase letters, numbers, dashes (-) and underscores (_). May not start with a dash', '^[a-z0-9_][a-z0-9_-]{0,61}[a-z0-9_]$', 'autofocus', '.' + domain, errors.sub)
      +register-textbox('text', 'username', 'Username', (body && body.username), '2 to 63 characters; lowercase letters, numbers, dashes (-) and underscores (_). May not start with a dash or underscore', '^[a-z0-9][a-z0-9_-]{0,62}$', null, false, errors.username)
      +register-textbox('password', 'password', 'Password', null, 'Minimum 8 characters', '^.{8,}$', null, false, errors.password)
      +register-textbox('password', 'password_confirm', 'Password Confirm', null, 'Minimum 8 characters', '^.{8,}$', null, false, errors.password_confirm)

      button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
